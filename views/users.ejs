<%- include('partials/header', { title: 'Users - SecureGuard' }) %> <%-
include('partials/sidebar', { page: 'users' }) %>

<div class="main-content">
  <div class="container">
    <div
      style="
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 3rem;
      "
    >
      <div style="display: flex; align-items: center">
        <div
          style="
            font-size: 2rem;
            margin-right: 1rem;
            filter: drop-shadow(0 0 10px rgba(139, 92, 246, 0.5));
          "
        >
          ðŸ‘¥
        </div>
        <h1
          style="
            margin: 0;
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
          "
        >
          User Management
        </h1>
      </div>
      <a
        href="/users/new"
        class="btn btn-primary pulse"
        style="
          background: var(--gradient-gold);
          box-shadow: 0 4px 15px rgba(6, 182, 212, 0.4);
        "
        >+ Add User</a
      >
    </div>

    <div class="glass-card sparkle">
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Group</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (users && users.length > 0) { %> <% users.forEach(user => { %>
            <tr>
              <td style="font-weight: 500; color: white">
                <%= user.firstName %> <%= user.lastName %>
              </td>
              <td style="color: #cbd5e1"><%= user.email %></td>
              <td>
                <span
                  style="
                    background: rgba(255, 255, 255, 0.05);
                    padding: 2px 8px;
                    border-radius: 4px;
                    font-size: 0.85rem;
                  "
                  ><%= user.group || 'No Group' %></span
                >
              </td>
              <td>
                <span
                  class="badge badge-active pulse"
                  style="
                    background: rgba(16, 185, 129, 0.2);
                    color: #34d399;
                    border: 1px solid rgba(16, 185, 129, 0.4);
                  "
                  >Active</span
                >
              </td>
              <td>
                <a
                  href="/users/<%= user.id %>/edit"
                  class="btn btn-secondary"
                  style="padding: 0.4rem 0.8rem; font-size: 0.8rem"
                  >Edit</a
                >
                <button
                  onclick="deleteUser(<%= user.id %>)"
                  class="btn btn-danger"
                  style="
                    padding: 0.4rem 0.8rem;
                    font-size: 0.8rem;
                    margin-left: 0.5rem;
                  "
                >
                  Delete
                </button>
              </td>
            </tr>
            <% }) %> <% } else { %>
            <tr>
              <td
                colspan="5"
                style="text-align: center; color: #94a3b8; padding: 2rem"
              >
                No users found.
                <a href="/users/new" style="color: var(--accent-gold)"
                  >Add your first user</a
                >
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
  function deleteUser(userId) {
    if (confirm("Are you sure you want to delete this user?")) {
      fetch(`/users/${userId}`, {
        method: "DELETE",
        headers: { "Content-Type": "application/json" },
      }).then((response) => {
        if (response.ok) {
          location.reload();
        } else {
          alert("Error deleting user");
        }
      });
    }
  }
</script>

<%- include('partials/footer') %>
